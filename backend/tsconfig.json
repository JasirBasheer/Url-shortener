{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "outDir": "./dist",               
    "rootDir": "./src",               
    "esModuleInterop": true,
    "strict": false,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@/models": ["./models"],
      "@/repositories": ["./repositories"],
      "@/services": ["./services"],
      "@/controllers": ["./controllers"],
      "@/middleware": ["./middleware"],
      "@/routes": ["./routes"],
      "@/types": ["./types"],
      "@/utils": ["./utils"],
      "@/exceptions": ["./exceptions"]
    },
    "typeRoots": [
     "./node_modules/@types", 
     "./src/types"
    ],
  },
  "include": ["src/**/*", "src/tests"],           
  "exclude": ["node_modules", "dist"]  
}
